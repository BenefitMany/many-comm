%html
  %head
    %meta{ 'http-equiv' => 'Content-Type', content: 'text/html; charset=utf-8' }
  %body{style: "margin: 0; background-color: #e5e5e5; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;"}
  %br/
  %br/
  %table{align: "center", border: "0", cellpadding: "10", cellspacing: "0", style: "border: 1px solid #ccc; margin-bottom: 20px; background-color: #f2f2f2;", valign: "top", width: "622"}
    %tr
      %td
        %table{align: "center", border: "0", cellpadding: "0", cellspacing: "0", style: "background-color: #ffffff; text-align: left; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; font-size: 12px; color: #555555; line-height: 20px", valign: "top", width: "600"}
          %tr
            %td{style: "width: 10px;"} &nbsp;
            %td{style: "font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; font-size: 12px; color: #555555; line-height: 20px; width: 380px; vertical-align: top;"}
              %br/
              / = image_tag(attachments['logo.svg'].url, id: 'many_comm_logo')
              %p#email_greeting{style: "font-weight: bold; font-size: 14px; color: #777777; margin: 10px 0 0 0;"}
                = yield :email_title
              %p#email_title{style: 'font-weight: bold; font-size: 24px; line-height: 26px; color: #777777; margin: 10px 0 0 0;'}
                = yield :email_greeting
              %p#email_body{style: "font-size: 14px; color: #777777; margin: 10px 0 0 0;"}
                = yield :email_body
              %p#email_action_item{style: "font-weight: bold; font-size: 18px; color: #777777; margin: 10px 0 0 0;"}
                = yield :email_action_item
              %p#email_more_body{style: "font-size: 14px; color: #777777; margin: 10px 0 0 0;"}
                = yield :email_more_body
              %br/
